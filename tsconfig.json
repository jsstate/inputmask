  "compilerOptions": {
    "outDir": "dist",
    "module": "UMD",
    "moduleResolution": "Node",
    "target": "ES2015",
    "lib": ["ESNext"],
    "allowJs": false,
    "checkJs": false,
    "declarationDir": "types",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src"]
}
